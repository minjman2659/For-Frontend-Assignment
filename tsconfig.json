{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "noImplicitThis": false,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*", "test"],
  "exclude": ["node_modules"]
}
